<% provide(:title, "Edit My Profile") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: "/users/#{@user.id}" do |f| %>


      <%= render 'shared/error_messages' %> <br>

      <%= f.label :full_name %>
      <%= f.text_field :full_name, class: 'form-control' %> <br> <br>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %> <br> <br>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %> <br> <br>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %> <br> <br>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
