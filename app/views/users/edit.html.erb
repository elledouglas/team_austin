<% provide(:title, "Edit My Profile") %>
<div class="title_h1">
<h1>Update your profile</h1>
</div>
<div id="horse"></div>
<div class="edit_row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: "/users/#{@user.id}" do |f| %>


      <%= render 'shared/error_messages' %> <br>

      <%= f.label :full_name %>
      <%= f.text_field :full_name, :placerholder 'change name here', class: 'form-control' %> <br> <br>

      <%= f.label :email %>
      <%= f.email_field :email, :placerholder 'change email here', class: 'form-control' %> <br> <br>

      <%= f.label :ethnicity%>
      <%= f.text_field :ethnicity, :placerholder 'add ethnicity',%><br>

      <%= f.label :children %>
      <%= f.text_field :children, :placerholder 'add children'%><br>

      <%= f.label :video %>
      <%= f.file_field :video, :placerholder 'change or add video '%><br>

      <!-- <%= f.label :image %>
      <%= f.file_field :image %><br> -->

      <%= f.label :password %>
      <%= f.password_field :password, :placerholder 'add new password', class: 'form-control' %> <br> <br>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %> <br>

      <%= f.submit "Save changes", class: "btn btn-primary" %> <br>
<br>
      <% if !@user.instagram_token.present? %>
      <a href="/users/instagram/add">Connect your Instagram!</a>

      <%end %> <br>
      <br>
      <% if current_user?(@user) %>
        | <%= link_to "Delete My Account", delete_user_profile_path, method: :delete,
                                      data: { confirm: "Are you sure? This cannot be undone!" } %>
      <% end %>


    <% end %>
  </div>
</div>
